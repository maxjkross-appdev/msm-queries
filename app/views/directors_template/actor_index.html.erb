<h1>List of all actors</h1>


<table border="1">
<%= @list_of_actors.all.each do |an_actor| %>
  <tr>
    <td><%= an_actor.id %></td>

    <td><img src="<%= an_actor.image %>" style="width:250px;"></td>

    <td><%= an_actor.name %></td>

    <td><%= an_actor.dob %></td>

    <td>
      <a href="/actors/<%= an_actor.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end%>
</table>
